@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sign In"; 
}
@using FormMethod = System.Web.Mvc.FormMethod
@model App.Models.Passport.LoginModel

<fieldset class="col-xs-4">
    <legend>Sign In</legend>
    <div>
    @using (Html.BeginForm("Login", "Passport", FormMethod.Post, new {@class = "form"}))
    {
            <div class="form-group">
                <label for="txtLangCode" class="control-label">
                    username</label> 
                @Html.TextBoxFor(m=>m.UserName,new{@class="form-control"})
                @Html.ValidationMessageFor(m=>m.UserName)
            </div>
            <div class="form-group">
                <label for="txtLangCode" class="control-label">
                    Password</label> 
                    @Html.PasswordFor(m=>m.Password,new{ @class="form-control"})
                    @Html.ValidationMessageFor(m=>m.Password)
            </div>
            <div class="checkbox">
            <label>
                 @Html.CheckBoxFor(m => m.Remember) 
                  RememberMe
            </label>
          </div>
             <div class="form-group"> 
                    <button type="submit" class="btn btn-primary" id="btnSubmit">
                        Log in</button>  
             </div>
     }
    </div>
</fieldset>