 @using System.Diagnostics @using App.WebUI.Controllers;
 @{ 
     var currentController = this.ViewContext.Controller as AppControllerBase;    
 }
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")" target="_self">AspnetMVC</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="" target="_self">Home</a></li>
                <li><a href="@Url.Action("UserManage", "Passport")" target="_self">Users</a></li>
                <li><a href="@Url.Action("Register", "Passport")" target="_self">Register</a></li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown
                    <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("UserManage", "Passport")">Users</a></li>
                        <li><a href="@Url.Action("Register", "Passport")">Register</a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Nav header</li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (currentController.LoginService.IsLogined())
                {
                    var userSession = currentController.LoginService.GetLoginedSession();
                    <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@userSession.DisplayName<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("Logout", "Passport")' target="_self">Sign out</a></li>
                        </ul>
                    </li> 
                }
                else
                {
                    <li class="active"><a href='@Url.Action("Login", "Passport")' target="_self">Sign in</a></li>
                }
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
</div>
