@using ServiceStack.Mvc;
@using ServiceStack.Html;
@using ServiceStack.ServiceInterface.Auth;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @(Request.IsLocal ? Html.RenderCssBundle("~/Content/bundler/app.css.bundle", BundleOptions.Normal) : Html.RenderCssBundle("~/Content/bundler/app.css.bundle", BundleOptions.MinifiedAndCombined))
    @Html.Partial("HeadContainer")
    @RenderSection("Style", required: false)
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="static/js/html5shiv.js"></script>
    <script src="static/js/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        window.BASE_URL = '@Url.Content("~")';
    </script>
</head>
<body>
    @ServiceStack.MiniProfiler.Profiler.RenderIncludes().AsRaw()     
    @Html.Partial("TopNav");
    <div class="container" id="body">
        <div class="row">
            @Html.Messages()
            @RenderBody()
        </div>
    </div>
    <div id="footer" class="footer">
        <div class="container">
            <div class="row">
                <a href="#">about me</a>
            </div>
        </div>
    </div>
    @Html.Partial("FooterContainer")
    <script src="~/Content/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery-migrate-1.2.1.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.widget.min.js" type="text/javascript"></script>
    <script src="~/Content/js/respond.min.js" type="text/javascript"></script>
    @(Request.IsLocal ? Html.RenderJsBundle("~/Content/bundler/app.js.bundle", BundleOptions.Normal) : Html.RenderJsBundle("~/Content/bundler/app.js.bundle", BundleOptions.MinifiedAndCombined))
    <script type="text/javascript">
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
    @RenderSection("JavaScript", required: false)
</body>
</html>
